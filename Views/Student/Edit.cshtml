@model FutureTech_Academy.Models.Student

@{
    ViewData["Title"] = "Edit Student";
}

<div class="min-h-screen bg-gradient-to-b from-gray-900 to-gray-800 text-gray-200 py-8 w-full">
    <div class="container mx-auto px-4 max-w-4xl">
        <!-- Header -->
        <div class="flex flex-col items-center mb-6">
            <span class="text-amber-400 text-sm font-semibold tracking-wider uppercase">Student Management</span>
            <h2 class="text-2xl font-bold text-white mt-2">Edit Student</h2>
            <div class="h-1 w-24 bg-gradient-to-r from-amber-500 to-amber-300 rounded-full mt-4"></div>
        </div>

        <div class="bg-gray-800 rounded-lg border border-gray-700 shadow-lg overflow-hidden">
            <!-- Form header with student info -->
            <div class="p-6 border-b border-gray-700 flex items-center">
                <div class="flex-shrink-0 mr-4">
                    @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                    {
                        <img src="@Model.ProfileImageUrl" alt="Profile" class="h-16 w-16 rounded-full object-cover border-2 border-amber-500/30">
                    }
                    else
                    {
                        <div class="h-16 w-16 rounded-full bg-gradient-to-br from-gray-700 to-gray-600 flex items-center justify-center border-2 border-amber-500/30">
                            <span class="text-amber-400 text-2xl font-medium">@(Model.FirstName[0])@(Model.LastName[0])</span>
                        </div>
                    }
                </div>
                <div>
                    <h3 class="text-xl font-semibold text-white">@Model.FirstName @Model.LastName</h3>
                    <p class="text-gray-400">ID: @Model.id</p>
                </div>
            </div>

            <div class="p-6">
                <form asp-action="Edit" enctype="multipart/form-data" class="space-y-6">
                    <div asp-validation-summary="ModelOnly" class="bg-red-900/30 border border-red-500 text-red-200 px-4 py-3 rounded-lg mb-6"></div>
                    <input type="hidden" asp-for="id" />

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- First Name -->
                        <div class="form-group">
                            <label asp-for="FirstName" class="block text-sm font-medium text-amber-400 mb-1">First Name</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-500/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                    </svg>
                                </div>
                                <input asp-for="FirstName"
                                       class="pl-10 block w-full rounded-md bg-gray-900/50 border border-gray-600 text-white shadow-sm
                                    py-3 px-4
                                    focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500
                                    hover:border-gray-500 transition-colors
                                    placeholder-gray-500"
                                       placeholder="Enter first name" />
                            </div>
                            <span asp-validation-for="FirstName" class="mt-1 text-sm text-red-400"></span>
                        </div>

                        <!-- Last Name -->
                        <div class="form-group">
                            <label asp-for="LastName" class="block text-sm font-medium text-amber-400 mb-1">Last Name</label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-500/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                    </svg>
                                </div>
                                <input asp-for="LastName"
                                       class="pl-10 block w-full rounded-md bg-gray-900/50 border border-gray-600 text-white shadow-sm
                                    py-3 px-4
                                    focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500
                                    hover:border-gray-500 transition-colors
                                    placeholder-gray-500"
                                       placeholder="Enter last name" />
                            </div>
                            <span asp-validation-for="LastName" class="mt-1 text-sm text-red-400"></span>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label asp-for="Email" class="block text-sm font-medium text-amber-400 mb-1">Email Address</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-500/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <input asp-for="Email"
                                   class="pl-10 block w-full rounded-md bg-gray-900/50 border border-gray-600 text-white shadow-sm
                                py-3 px-4
                                focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500
                                hover:border-gray-500 transition-colors
                                placeholder-gray-500"
                                   placeholder="email@example.com" />
                        </div>
                        <span asp-validation-for="Email" class="mt-1 text-sm text-red-400"></span>
                    </div>

                    <!-- Mobile Number -->
                    <div class="form-group">
                        <label asp-for="MobileNumber" class="block text-sm font-medium text-amber-400 mb-1">Mobile Number</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-500/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                            </div>
                            <input asp-for="MobileNumber"
                                   class="pl-10 block w-full rounded-md bg-gray-900/50 border border-gray-600 text-white shadow-sm
                                py-3 px-4
                                focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500
                                hover:border-gray-500 transition-colors
                                placeholder-gray-500"
                                   placeholder="+1 (555) 123-4567" />
                        </div>
                        <span asp-validation-for="MobileNumber" class="mt-1 text-sm text-red-400"></span>
                    </div>

                    <!-- Enrolment Status -->
                    <div class="form-group">
                        <label asp-for="EnrolmentStatus" class="block text-sm font-medium text-amber-400 mb-1">Enrollment Status</label>
                        <div class="relative">
                            <select asp-for="EnrolmentStatus"
                                    class="block w-full rounded-md bg-gray-900/50 border border-gray-600 text-white shadow-sm
                                py-3 px-4 appearance-none
                                focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500
                                hover:border-gray-500 transition-colors">
                                <option value="Active" class="bg-gray-900">Active</option>
                                <option value="Inactive" class="bg-gray-900">Inactive</option>
                            </select>
                            <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-500/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                </svg>
                            </div>
                        </div>
                        <span asp-validation-for="EnrolmentStatus" class="mt-1 text-sm text-red-400"></span>
                    </div>

                    <!-- Profile Image Upload -->
                    <div class="form-group bg-gray-900/50 rounded-lg p-5 border border-gray-700 hover:border-gray-600 transition-colors">
                        <label asp-for="ProfileImageUrl" class="block text-sm font-medium text-amber-400 mb-2">Profile Image</label>

                        @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                        {
                            <div class="mb-4 relative group">
                                <img src="@Model.ProfileImageUrl" alt="Current Profile Image" class="w-32 h-32 rounded-lg object-cover border border-gray-600" />
                                <div class="absolute inset-0 bg-gray-900/70 opacity-0 group-hover:opacity-100 flex items-center justify-center transition-opacity rounded-lg">
                                    <span class="text-amber-400 text-sm font-medium">Current Image</span>
                                </div>
                            </div>
                        }

                        <div class="flex items-center justify-center w-full">
                            <label class="flex flex-col w-full h-32 border-2 border-dashed border-gray-600 hover:border-amber-500/50 rounded-lg cursor-pointer transition-colors bg-gray-900/20 hover:bg-gray-900/30">
                                <div class="flex flex-col items-center justify-center pt-7">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-amber-500/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    <p class="pt-1 text-sm text-gray-400">Drag a new image or click to browse</p>
                                </div>
                                <input type="file" name="profileImage" class="opacity-0" accept="image/jpeg,image/png" />
                            </label>
                        </div>
                        <p class="mt-3 text-sm text-gray-400">Only JPEG and PNG files are allowed (max 5MB). Leave empty to keep current image.</p>
                        <span asp-validation-for="ProfileImageUrl" class="mt-1 text-sm text-red-400"></span>
                    </div>

                    <!-- Submit and Back Buttons -->
                    <div class="flex justify-end space-x-3 pt-4 border-t border-gray-700">
                        <a asp-action="Index" class="px-5 py-2.5 border border-gray-600 rounded-md shadow-md text-sm font-medium text-gray-300 bg-gray-800 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-amber-500/30 focus:ring-offset-2 focus:ring-offset-gray-800 transition-colors inline-flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                            </svg>
                            Back to List
                        </a>
                        <button type="submit" class="px-5 py-2.5 border border-transparent rounded-md shadow-md text-sm font-medium text-gray-900 bg-gradient-to-r from-amber-500 to-amber-400 hover:from-amber-400 hover:to-amber-300 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2 focus:ring-offset-gray-800 transition-all inline-flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
                            </svg>
                            Save Changes
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
