@model IEnumerable<FutureTech_Academy.Models.Student>
@{
    ViewData["Title"] = "Students";
}

<div class="min-h-screen bg-gray-100 flex flex-col w-full">
    <div class="container mx-auto px-4 py-8 flex-1">
        <div class="max-w-7xl mx-auto">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold text-gray-800">Student Management</h2>
                <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors">
                    <i class="fas fa-user-plus mr-2"></i>Add New Student
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6" role="alert">
                    <span class="block sm:inline">@TempData["SuccessMessage"]</span>
                    <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="this.parentElement.remove()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
                    <span class="block sm:inline">@TempData["ErrorMessage"]</span>
                    <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="this.parentElement.remove()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            }

            <div class="bg-white rounded-lg shadow-sm">
                <div class="p-6">
                    <form asp-action="Search" method="post" class="mb-6">
                        <div class="flex">
                            <input type="text" name="searchTerm" class="flex-1 px-4 py-2 border border-gray-300 rounded-l-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Search by name or email...">
                            <button type="submit" class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-r-lg transition-colors">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>

                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Profile</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mobile Number</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                @foreach (var student in Model)
                                {
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            @if (!string.IsNullOrEmpty(student?.ProfileImageUrl))
                                            {
                                                <img src="@student.ProfileImageUrl" alt="Profile" class="h-10 w-10 rounded-full object-cover">
                                            }
                                            else
                                            {
                                                <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center">
                                                    <span class="text-gray-600 font-medium">@(student?.FirstName?[0])@(student?.LastName?[0])</span>
                                                </div>
                                            }
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-900">@student?.FirstName @student?.LastName</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-gray-500">@student?.Email</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-gray-500">@student?.MobileNumber</div>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(student?.EnrolmentStatus == "Active" ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                                @student?.EnrolmentStatus
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
    <div class="flex space-x-2 bg-gray-50 p-2 rounded-lg">
        <!-- Edit Button -->
        <a asp-action="Edit" asp-route-id="@student?.id" class="text-blue-600 hover:bg-blue-200 hover:text-blue-800 bg-blue-100 px-4 py-2 rounded-lg transition-colors duration-200">
            <i class="fas fa-edit"></i> Edit
        </a>
        <!-- View Button -->
        <a asp-action="Details" asp-route-id="@student?.id" class="text-gray-600 hover:bg-gray-200 hover:text-gray-800 bg-gray-100 px-4 py-2 rounded-lg transition-colors duration-200">
            <i class="fas fa-eye"></i> View
        </a>
        <!-- Delete Button -->
        <button type="button" class="text-red-600 hover:bg-red-200 hover:text-red-800 bg-red-100 px-4 py-2 rounded-lg transition-colors duration-200" onclick="confirmDelete('@student?.id', '@student?.FirstName @student?.LastName')">
            <i class="fas fa-trash"></i> Delete
        </button>
    </div>
</td>



                                    </tr>
                                }
                            </tbody>
                           
                        </table>
                        <!-- Pagination Controls -->
                        <div class="flex justify-between items-center mt-6">
                            <div class="flex space-x-2">
                                <!-- Previous Button -->
                                <button class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300 transition-colors disabled:opacity-50" disabled>
                                    Previous
                                </button>

                                <!-- Page Numbers -->
                                <div class="flex space-x-1">
                                    <button class="px-4 py-2 text-sm font-medium text-gray-700 bg-blue-100 rounded-lg hover:bg-blue-200 transition-colors">
                                        1
                                    </button>
                                    <button class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
                                        2
                                    </button>
                                    <button class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
                                        3
                                    </button>
                                    <button class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
                                        4
                                    </button>
                                    <button class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
                                        5
                                    </button>
                                </div>

                                <!-- Next Button -->
                                <button class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300 transition-colors">
                                    Next
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="fixed z-10 inset-0 overflow-y-auto hidden" id="deleteModal">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 transition-opacity" aria-hidden="true">
            <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
        </div>
        <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
        <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
            <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="sm:flex sm:items-start">
                    <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
                        <i class="fas fa-exclamation-triangle text-red-600"></i>
                    </div>
                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                        <h3 class="text-lg leading-6 font-medium text-gray-900">Confirm Delete</h3>
                        <div class="mt-2">
                            <p class="text-sm text-gray-500">Are you sure you want to delete <span id="studentName" class="font-medium"></span>?</p>
                            <div class="mt-4">
                                <label class="inline-flex items-center">
                                    <input type="checkbox" id="permanentDelete" class="form-checkbox h-4 w-4 text-red-600">
                                    <span class="ml-2 text-sm text-gray-600">Permanently delete (cannot be undone)</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                <form id="deleteForm" method="post" class="sm:ml-3">
                    <input type="hidden" name="id" id="studentId">
                    <input type="hidden" name="permanentDelete" id="permanentDeleteValue">
                    <button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm">
                        Delete
                    </button>
                </form>
                <button type="button" onclick="closeModal()" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            document.getElementById('studentName').textContent = name;
            document.getElementById('studentId').value = id;
            document.getElementById('deleteForm').action = '@Url.Action("Delete")';
            document.getElementById('deleteModal').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('deleteModal').classList.add('hidden');
        }

        document.getElementById('permanentDelete').addEventListener('change', function() {
            document.getElementById('permanentDeleteValue').value = this.checked;
        });
    </script>
}
