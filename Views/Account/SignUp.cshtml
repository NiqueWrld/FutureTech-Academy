@model FutureTech_Academy.Models.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="flex w-full items-center justify-center min-h-screen bg-gray-100">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
        <h3 class="text-2xl font-bold text-center mb-6">Sign Up</h3>

        <form asp-action="SignUp" method="post" class="space-y-4">
            <div asp-validation-summary="All" class="text-red-500 text-sm mb-2"></div>

            <div>
                <label asp-for="Email" class="block text-gray-700 font-medium mb-1"></label>
                <input asp-for="Email" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-gray-700 font-medium mb-1"></label>
                <input asp-for="Password" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                <small class="text-sm text-gray-600">Password must be at least 6 characters long.</small>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block text-gray-700 font-medium mb-1"></label>
                <input asp-for="ConfirmPassword" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-200">Sign Up</button>
            </div>
        </form>

        <div class="text-center mt-4 text-sm text-gray-600">
            <p>Already have an account? <a asp-action="Login" class="text-blue-500 hover:underline">Login</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
