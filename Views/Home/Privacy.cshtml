                        </ul>
                    </div>
                </section>
            </div>

            <!-- Back Button -->
            <div class="mt-10 mb-10">
                <a href="#" onclick="history.back(); return false;" class="inline-flex items-center bg-gray-800 hover:bg-gray-700 text-white px-6 py-3 rounded-lg text-base font-medium transition-colors border border-gray-700 group">
