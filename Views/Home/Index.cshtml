@{
    ViewData["Title"] = "FutureTech Academy - Leading Digital Education";
}

<div class="w-full">
    <!-- Hero Section -->
    <div class="relative mt-0 bg-cover bg-center min-h-[75vh]" style="background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1516321318423-f06f85e504b3?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80')">
        <div class="absolute inset-0 bg-black/50"></div>
        <div class="container mx-auto px-4 py-12 relative z-10">
            <div class="min-h-[75vh] flex items-center">
                <div class="max-w-2xl text-white">
                    <h1 class="text-5xl font-bold mb-6">Welcome to FutureTech Academy</h1>
                    <p class="text-xl mb-8">Empowering the next generation of digital innovators through cutting-edge education and hands-on experience.</p>
                    <div class="flex gap-4">
                        <a href="#courses" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg text-lg font-semibold transition-colors">Explore Courses</a>
                        <a href="#contact" class="border-2 border-white hover:bg-white/10 text-white px-6 py-3 rounded-lg text-lg font-semibold transition-colors">Contact Us</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <section class="py-16 bg-gray-50">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12">Why Choose FutureTech Academy?</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-white rounded-lg shadow-sm p-8 text-center hover:shadow-md transition-shadow">
                    <i class="fas fa-laptop-code text-4xl text-blue-600 mb-4"></i>
                    <h3 class="text-xl font-semibold mb-3">Industry-Relevant Curriculum</h3>
                    <p class="text-gray-600">Learn the latest technologies and skills demanded by today's digital industry.</p>
                </div>
                <div class="bg-white rounded-lg shadow-sm p-8 text-center hover:shadow-md transition-shadow">
                    <i class="fas fa-users text-4xl text-blue-600 mb-4"></i>
                    <h3 class="text-xl font-semibold mb-3">Expert Instructors</h3>
                    <p class="text-gray-600">Learn from industry professionals with years of real-world experience.</p>
                </div>
                <div class="bg-white rounded-lg shadow-sm p-8 text-center hover:shadow-md transition-shadow">
                    <i class="fas fa-graduation-cap text-4xl text-blue-600 mb-4"></i>
                    <h3 class="text-xl font-semibold mb-3">Career Support</h3>
                    <p class="text-gray-600">Get assistance with job placement and career development after graduation.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Courses Section -->
    <section id="courses" class="py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12">Our Featured Courses</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow">
                    <img src="https://via.placeholder.com/300x200" class="w-full h-48 object-cover" alt="Web Development">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold mb-3">Full Stack Web Development</h3>
                        <p class="text-gray-600 mb-4">Master modern web technologies and build dynamic applications.</p>
                        <ul class="space-y-2">
                            <li class="flex items-center text-gray-600">
                                <i class="fas fa-check text-green-500 mr-2"></i>HTML5 & CSS3
                            </li>
                            <li class="flex items-center text-gray-600">
                                <i class="fas fa-check text-green-500 mr-2"></i>JavaScript & React
                            </li>
                            <li class="flex items-center text-gray-600">
                                <i class="fas fa-check text-green-500 mr-2"></i>Node.js & Express
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow">
                    <img src="https://via.placeholder.com/300x200" class="w-full h-48 object-cover" alt="Data Science">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold mb-3">Data Science & Analytics</h3>
                        <p class="text-gray-600 mb-4">Learn to extract insights from data using advanced analytics tools.</p>
                        <ul class="space-y-2">
                            <li class="flex items-center text-gray-600">
                                <i class="fas fa-check text-green-500 mr-2"></i>Python & R
                            </li>
                            <li class="flex items-center text-gray-600">
                                <i class="fas fa-check text-green-500 mr-2"></i>Machine Learning
                            </li>
                            <li class="flex items-center text-gray-600">
                                <i class="fas fa-check text-green-500 mr-2"></i>Data Visualization
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow">
                    <img src="https://via.placeholder.com/300x200" class="w-full h-48 object-cover" alt="Cloud Computing">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold mb-3">Cloud Computing</h3>
                        <p class="text-gray-600 mb-4">Master cloud platforms and infrastructure management.</p>
                        <ul class="space-y-2">
                            <li class="flex items-center text-gray-600">
                                <i class="fas fa-check text-green-500 mr-2"></i>AWS & Azure
                            </li>
                            <li class="flex items-center text-gray-600">
                                <i class="fas fa-check text-green-500 mr-2"></i>DevOps
                            </li>
                            <li class="flex items-center text-gray-600">
                                <i class="fas fa-check text-green-500 mr-2"></i>Containerization
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="py-16 bg-blue-600 text-white">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
                <div>
                    <h2 class="text-5xl font-bold mb-2">500+</h2>
                    <p class="text-xl">Students Enrolled</p>
                </div>
                <div>
                    <h2 class="text-5xl font-bold mb-2">95%</h2>
                    <p class="text-xl">Graduation Rate</p>
                </div>
                <div>
                    <h2 class="text-5xl font-bold mb-2">50+</h2>
                    <p class="text-xl">Industry Partners</p>
                </div>
                <div>
                    <h2 class="text-5xl font-bold mb-2">100%</h2>
                    <p class="text-xl">Job Placement</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-12">Get in Touch</h2>
            <div class="max-w-2xl mx-auto">
                <div class="bg-white rounded-lg shadow-sm p-8">
                    <form class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Your Name" required>
                            <input type="email" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Your Email" required>
                        </div>
                        <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Subject" required>
                        <textarea class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent" rows="5" placeholder="Your Message" required></textarea>
<div class="text-center">
                            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg text-lg font-semibold transition-colors">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
